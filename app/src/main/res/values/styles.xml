<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_gradient_style"  parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontWeight">700</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#80000000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#80000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="button_finish_order_skip_style"  parent="Widget.Material3.Button">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>


    <style name="OrderDetailsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">7dp</item>
    </style>



    <style name="AccountTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="GoogleLoginButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/ic_google</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="paddingStart">35dp</item>
        <item name="android:background">@drawable/google_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#66F6F6F6</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#3B3B3B</item>
        <item name="android:textColorHint">#3B3B3B</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>